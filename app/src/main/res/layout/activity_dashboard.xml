<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

          <LinearLayout
              android:id="@+id/lli"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:orientation="vertical">

              <!-- Row 1 -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_weight="1">

                  <androidx.cardview.widget.CardView
                      android:id="@+id/GeneralAwareness"
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="60dp"
                              android:layout_height="60dp"
                              android:layout_gravity="center"
                              android:background="@drawable/creative"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="General Awareness "
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="60dp"
                              android:layout_height="60dp"
                              android:layout_gravity="center"
                              android:background="@drawable/book"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="GK + GS + Static GK"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>



              </LinearLayout>

              <!-- Row 2 -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_weight="1">

                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="60dp"
                              android:layout_height="60dp"
                              android:layout_gravity="center"
                              android:background="@drawable/math"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Mathematics"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>


                      </LinearLayout>

                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="60dp"
                              android:layout_height="60dp"
                              android:layout_gravity="center"
                              android:background="@drawable/science"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Science"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>



              </LinearLayout>

              <!-- Row 3 -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_weight="1">

                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="60dp"
                              android:layout_height="60dp"
                              android:layout_gravity="center"
                              android:background="@drawable/creative"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="General Intelligence and Reasoning"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="70dp"
                              android:layout_height="70dp"
                              android:layout_gravity="center"
                              android:background="@drawable/reasoning"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Reasoning"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>



              </LinearLayout>

              <!-- Row 4 -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_weight="1">

                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="60dp"
                              android:layout_height="60dp"
                              android:layout_gravity="center"
                              android:background="@drawable/questionpaper"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Previous Year Question Paper"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>


                  <androidx.cardview.widget.CardView
                      android:layout_width="130dp"
                      android:layout_height="130dp"
                      app:cardCornerRadius="15dp"
                      app:cardBackgroundColor="#858585"
                      android:layout_margin="8dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                          <ImageView
                              android:layout_width="70dp"
                              android:layout_height="70dp"
                              android:layout_gravity="center"
                              android:background="@drawable/paper"/>

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Sample Question Paper"
                              android:gravity="center"
                              android:textSize="13sp"
                              android:textColor="@color/white"/>



                      </LinearLayout>

                  </androidx.cardview.widget.CardView>



              </LinearLayout>


          </LinearLayout>






  





</LinearLayout>